# Wordpress .htaccess configuration

RewriteEngine On
RewriteBase /

RewriteRule ^index\.php$ - [L]

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule . index.php [L]


<Files .htaccess>
  Order Allow,Deny
  Deny from all
</Files>

<Files wp-config.php>
  Order Allow,Deny
  Deny from all
</Files>

<Files install.php>
  Order Allow,Deny
  Deny from all
</Files>

Options -Indexes

